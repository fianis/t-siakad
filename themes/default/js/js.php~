?>
<script type="text/javascript">
     $(document).ready(function(){
	$("#seting").load("http://lcoalhost/tsiakad/admin/upload/index.php");	 
        $("#kotakdialog").dialog({
          autoOpen: false,
          width: 450,
		  height: 300
        });
      
      $("#isi").accordion(
		<?php 
			$path = path_info();
			$plugin = getplugin_modul();
			$count_plugin = count($plugin);
			$i = 0;
			while ($i < $count_plugin)
			{
				if ($plugin[$i] == $path[2]) {
					echo ("{active: ".$i."}");
				}
			$i++;
			}
		?>  
      );
      $('.entry').accordion({active: 0});
      <?php 
			$plugin = getplugin_modul();
			$count_plugin = count($plugin);
			$i = 0;
			while ($i < $count_plugin)
			{
				echo ("$('#form".$plugin[$i]."').click(function() {
					$('#kotakdialog').dialog('open');
					$('#form').load('".HOSTNAME."plugin/".$plugin[$i]."/form.php');
				  }
				);\n");
			$i++;
			}
		?>      

});
</script>
