include ("../../inc/define.php");
include (HOST.CONF);
include (HOST.FUNC);
function select($field,$value1,$value2){
	if ($field == $value1) {
			echo ("<option selected value='".$value1."'>".ucfirst($value1)."</option><option value='".$value2."'>".ucfirst($value2)."</option>");
		}
	else if ($field == "$value2") {
			echo ("<option value='".$value1."'>".ucfirst($value1)."</option><option selected value='".$value2."'>".ucfirst($value2)."</option>");
		}
}

conn_db($host,$user,$pass,$db);

/******************************************************report database*******************************************************/
$i = 1;
$db = db_select("plugin");
$db_count = mysql_num_rows($db);
	if ($db_count > 0){
	echo ("<table border='0' cellpadding='0' cellspacing='1' class='ui-state-default'>
						<tr class='header'>
								<td width='150'>Plugin</td>
								<td width='150'>Description</td>
								<td width='100'>Position</td>
								<td width='100'>Status</td>
								<td width='100'>Dosen</td>
								<td width='100'>Mahasiswa</td>
								<td width='75'>Update</td>
						</tr>");
	while ($plugin = mysql_fetch_array($db)){
		
		echo ("<script>$('#".$plugin[id_plugin]."').submit(function() {
		$.ajax({
			type: 'POST',
			url: $(this).attr('action'),
			data: $(this).serialize(),
			success: function(data) {
				alert(data);
			}
		})
		return false;
	});</script>");
			//report plugin
					
				if ($i%2){
					$class = "ganjil";
				} else {
					$class = "genap";
				}
				
		echo ("<form action='".HOSTNAME."admin/plugin/update.php' name='form' id='".$plugin[id_plugin]."' method='POST'>
		<tr class='".$class."'>
				<td><b>".ucfirst($plugin[plugin_name])."</b><input type='hidden' name='id_plugin' value='".$plugin[id_plugin]."'</td>
				<td>".$plugin[description]."</td>
				<td align='center'><select name='position'>");
					select($plugin[position],"modul","content");
		echo ("</select></td><td align='center'><select name='status'>");
					select($plugin[status],"false","true");
		echo ("</select></td>
				<td align='center'><select name='perm_dosen'>");
					select($plugin[perm_dosen],"false","true");
		echo ("</select></td>
				<td align='center'><select name='perm_mahasiswa'>");
					select($plugin[perm_mahasiswa],"false","true");
		echo ("</select></td>
				<td align='center'><input type='image' src='".HOSTNAME.THEMES.$themes."/images/icon/update.png' name='id_plugin' >
				</td>
		</tr></form>");
			$i++;
		}
		echo ("</table>");

	}
	else {
		dialogbox("Plugin belum terinstal!");
	}
/******************************************************report database*******************************************************/

